/*
Resource management
*/

process {

    // error strategy
    maxRetries = 3

    // basic resources
    cpus = 1
	time = { 20.m * task.attempt }

    // process-specific resources
    withName: mageck {
        memory = { 10.GB * task.attempt }
    }
    withName: postprocess {
        memory = { 1.GB * task.attempt }
    }
}

timeline {
    enabled = true
}
